<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/participant_company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/black15Regular"
        android:alpha="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="АТОМ СТРОЙ ОЫФВ" />

    <TextView
        android:id="@+id/participant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        style="@style/black15Regular"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/participant_company"
        tools:text="BVZ BZV BZV " />
    <TextView
        android:id="@+id/participant_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/blue15Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/participant_name"
        app:layout_constraintBottom_toBottomOf="@id/participant_name"
        tools:text="+79506137445" />

</androidx.constraintlayout.widget.ConstraintLayout>